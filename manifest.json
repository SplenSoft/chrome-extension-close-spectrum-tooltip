{
  "name": "Close Spectrum Tooltip",
  "description": "Fixes a spectrum bug that keeps the tooltip showing all the time. Just press Escape.",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "closeTooltips.html",
    "default_icon": "closeTooltips.png"
  },
  "content_scripts": [
    {
      "js": ["main.js"],
      "matches": [
        "https://robertsspaceindustries.com/spectrum/*"
      ]
    }
  ],
  "browser_specific_settings": {
  "gecko": {
    "id": "{cd2f7ea7-e209-4cf2-b95c-d6f1a3ff573a}"
  }
}

}